<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:focusable="true">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="What is the entry date?"/>


            <EditText
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:layout_height="wrap_content"
                android:id="@+id/in_date"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pain in the morning?" />

            <EditText
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:id="@+id/etPainMorn"
                android:imeOptions="flagNoExtractUi"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Pain in the middle of the day?"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:id="@+id/etPainMid"
                android:imeOptions="flagNoExtractUi"/>
        </TableRow>

        <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:inputType="number"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pain at night?"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight=".75"
            android:layout_height="wrap_content"
            android:id="@+id/etPainNight"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="How long did you sleep?"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:layout_height="wrap_content"
                android:id="@+id/etSleepLength"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Today's energy level?"/>



            <EditText
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:layout_height="wrap_content"
                android:id="@+id/etEnergyLvl"
                android:layout_alignParentLeft="true"
                android:inputType="number"
                android:layout_alignParentStart="true" />


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Today's stress level?"/>



            <EditText
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:layout_height="wrap_content"
                android:id="@+id/etStressLvl"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:inputType="number"
            />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Sleep time last night?"/>

            <EditText
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:layout_height="wrap_content"
                android:id="@+id/in_time"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </TableRow>

    </TableLayout>


</LinearLayout>